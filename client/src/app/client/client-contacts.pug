.container-flex-form(style="padding:25px;")
	table.list-glarus.contacts-list(ng-show='contacts.length')
		thead
			tr
				th {{ 'party.person.name' | translate }}
				th {{ 'party.phone' | translate }}
				th {{ 'party.email' | translate }}
				th {{ 'party.person.area' | translate }}
				th(ng-show='userRole.can("READ",subOption.authContext);')
					.col-edit-contact {{ 'user.edit' | translate }}
				th(ng-show='userRole.can("READ",subOption.authContext);')
					md-button.md-icon-button(ng-click='disableSelectedContacts()' aria-label="Trash" style="background:none; margin-left:0px; margin-right:0px  padding-right:0px;")
						md-icon.fa.fa-trash.fa-lg.trash-center(style="color:#ffffff; background:none; margin-left:15px; padding-right:50px;" )
		tbody
			tr(ng-repeat='contact in contacts track by contact.id')
				td {{ contact.name.last }} {{ contact.name.maternal }} {{ contact.name.first }}  {{ contact.name.middle }}
				td {{ contact.phoneNumber('work').number }}
				td {{ contact.emailAddress('work').address }}
				td {{ contact.area }}
				td.action(ng-show='userRole.can("READ",subOption.authContext);')
					a.action-button-glarus
						span.fa.fa-pencil.fa-lg(ng-click='editClientContact(contact.id)' style="margin-left:8px;")
				td(style="text-align:center" ng-show='userRole.can("READ",subOption.authContext);' )
					md-checkbox(aria-label="Trash" ng-model='contact.selected' class="md-primary" style="margin-top:8px; margin-left:10px; background:none")

