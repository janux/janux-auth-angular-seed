login-toolbar(title='permission.title')

.sd-page-container
	side-bar
	.sd-page-content-wrapper
		.sd-page-content.logbook(ng-class="{'toggleMenu-sd-content': isCollapsed}")

			.title-bar
				.title Bitácora
			hr

			.add-form
				.element
					md-autocomplete(md-no-cache='false',
					md-items='item in personSearch(lbSearch.person)',
					md-selected-item='lbRow.person',
					md-search-text-change='personSearchTextChange(lbSearch.person)',
					md-search-text='lbSearch.person',
					md-selected-item-change='personSelectedItemChange(item)',
					md-item-text='item.displayName',
					md-min-length='0',
					md-floating-label='Personal',
					style='width:50px')
						md-item-template
							span(md-highlight-text='lbSearch.person', md-highlight-flags='^i') {{item.displayName}}

				.element
					md-input-container
						label Servicio
						input(ng-model='lbRow.service')
				.element
					md-input-container
						label Inicio
						input(mdc-datetime-picker=''
						date='true'
						time='true'
						show-todays-date=''
						minutes='true'
						show-icon='false'
						format='MM/DD/YY hh:mm a'
						ng-model='lbRow.start' type='text')
				.element
					md-input-container
						label Termino
						input(mdc-datetime-picker=''
						date='true'
						time='true'
						show-todays-date=''
						minutes='true'
						show-icon='false'
						format='MM/DD/YY hh:mm a'
						ng-model='lbRow.end' type='text')
				.element
					md-input-container
						label Proveedor
						input(ng-model='lbRow.provider')
				.element
					md-input-container
						label Ubicación
						input(ng-model='lbRow.location')
				.element
					md-input-container
						label Falta
						input(ng-model='lbRow.absence')
				.save
					button.btn.btn-success(ng-click='addRow()')
						span.glyphicon.glyphicon-floppy-disk

			.driver-log-grid.ag-fresh(ag-grid="gridOptions")