login-toolbar(title='permission.title')

side-bar

.page-content-wrapper(ng-class="{'page-content-left' : noneStyle}")
	.container-fluid
		.row
			md-toolbar.form-root-toolbar
				.md-toolbar-tools
					md-truncate
						| {{ 'permission.authContextGroup' | translate }}
					span(flex)

					md-button.md-icon-button.save(aria-label="Save" ng-click='saveAuthContextGroup()')
								md-icon.fa.fa-check.fa-lg

					md-button.md-icon-button.cancel(aria-label="Cancel" ng-click='cancel()')
						md-icon.fa.fa-times.fa-lg
			.col-lg-12(style="padding-top:20px;")


				form(name='authContextGroupForm')

					table.table.context-form
						tr
							td: label(for='authContextGroupName') Name:
							td: input#authContextGroupName.form-control(type='text' ng-model='contextGroupName' name='name' required='')
						tr
							td: label(for='authContextGroupCode') Code:
							td: input#authContextGroupCode.form-control(type='text' ng-model='contextGroupCode' name='code' required='')
						tr
							td: label(for='authContextGroupDesc') Description:
							td: input#authContextGroupDesc.form-control(type='text' ng-model='contextGroupDesc' name='description' required='')
footer-Janux
