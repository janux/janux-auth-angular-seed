.modal-body(style="overflow:hidden")
	.section-form
		.fieldset-flex.flex-mobile(style="padding-right:20px;")
			.an-material.nopadding
				md-input-container.full
					label {{ 'services.invoice.invoiceNumber' | translate }}
					input(ng-model='newInvoiceNumber' type="text", required='')

			.an-material.nopadding
				md-datepicker.full(
					lang='{{ lang }}',
					ng-model="newInvoiceDate",
					format='YYYY-MM-DD',
					md-placeholder="{{ 'services.invoice.invoiceDate' | translate }}")

.modal-footer

	button.btn.btn-ok(ng-click='createNewInvoice()') {{ 'label.ok' | translate }}
	| &nbsp;
	button.btn.btn-cancel(ng-click='closeAddNewInvoice()') {{ 'label.cancel' | translate }}