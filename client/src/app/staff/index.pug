side-bar

.page-content-wrapper(ng-class="{'page-content-left' : noneStyle}")
	.container-fluid
		.row
			.col-lg-12

				.title-bar
					.title {{ 'label.staff' | translate }}
					.options
						a(ui-sref='staff.create')
							span.fa.fa-plus-circle.fa-lg 
							| &nbsp; Add
				hr

				table.list.users-list(ng-show='staffList.length')
					thead
						tr
							th {{ 'staff.name' | translate }}
							th {{ 'staff.maternalName' | translate }}
							th {{ 'staff.lastName' | translate }}
							th {{ 'staff.email' | translate }}
							th {{ 'staff.phone' | translate }}
							th
					tbody
						tr(ng-repeat='staff in staffList')
							td {{ staff.name.first }}
							td {{ staff.name.middle }}
							td {{ staff.name.last }}
							td {{ staff.email }}
							td {{ staff.phone }}
							td.text-center
								a.action-button
									span.fa.fa-pencil.fa-lg 
								a.action-button
									span.fa.fa-trash.fa-lg 

				
