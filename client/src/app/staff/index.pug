side-bar

.page-content-wrapper(ng-class="{'page-content-left' : noneStyle}")
	.container-fluid-flex
		md-toolbar.form-root-toolbar(style="height:10px")
				.md-toolbar-tools.form-toolbar-glarus
					md-truncate
						| {{ 'staff.listTitle' | translate }}
					span(flex)

					md-button.add.md-icon-button.form-btn-toolbar(aria-label="Add" ui-sref='staff.create')
						md-icon.fa.fa-user-plus.fa-lg

					md-button.grid.md-icon-button.form-btn-toolbar(aria-label="Grid")
						md-icon.fa.fa-table.fa-lg

					md-button.arrow.md-icon-button(aria-label="Upload")
						md-icon.fa.fa-upload.fa-lg
		.container-body
			table.list-glarus.users-list(ng-show='staffList.length')
				thead
					tr
						th {{ 'staff.name' | translate }}
						th {{ 'staff.phone' | translate }}
						th {{ 'staff.email' | translate }}
						th {{ 'staff.area' | translate }}
						th {{ 'staff.userName' | translate }}
						th {{ 'user.edit' | translate }}
						th
							md-button.md-icon-button(aria-label="Trash" style="background:none;")
								md-icon.fa.fa-trash.fa-lg(style="color:#ffffff;")
				tbody
					tr(ng-repeat='staff in staffList')
						td {{ staff.name.middle }} {{ staff.name.last }}, {{ staff.name.first }}
						td {{ staff.phoneNumber('work').number }}
						td {{ staff.emailAddress('work').address }}
						td {{ staff.area }}
						td {{ staff.user }}
						td.text-center
							a.action-button-glarus
								span.fa.fa-pencil.fa-lg(ng-click='editStaff(staff.id)') 
						td(style="text-align:center")
							md-checkbox(aria-label="Trash" ng-model='staff.Selected' class="md-primary")

				
