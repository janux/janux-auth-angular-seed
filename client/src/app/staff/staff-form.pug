.container-flex-form
	.staff-form-left
		.section-form
			p.form-section-glarus
				| {{ 'staff.employeeTitle' | translate}}
			fieldset.fieldset-flex
				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.name' | translate}}
							input(ng-model='staff.name.first')

					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.middleName' | translate}}
							input(ng-model='staff.name.middle')

			fieldset.fieldset-flex
				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.lastName' | translate}}
							input(ng-model='staff.name.last')

					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.maternalName' | translate}}
							input(ng-model='staff.name.maternal')

		.section-form
			p.form-section-glarus
				| {{ 'staff.phonesTitle' | translate}}
			fieldset.fieldset-flex(data-ng-repeat="phone in staff.contactMethods.phones track by $index")
				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.type' | translate}}
							input(ng-model="phone.type")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.code' | translate}}
							input(ng-model="phone.countryCode")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.area' | translate}}
							input(ng-model='phone.areaCode')
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.number' | translate}}
							input(ng-model='phone.number')
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.ext' | translate}}
							input(ng-model='phone.ext')
					div
							md-checkbox(aria-label="SMS" ng-model='phone.sms')
								| {{ 'staff.sms' | translate}}
					div
							md-checkbox(aria-label="WSP" ng-model='phone.wsp')
								| {{ 'staff.wps' | translate}}
					div
							button.btn-trash(ng-click="removePhone($index)")
								i.fa.fa-trash


			.btn-row-form
				md-divider.divider-line-glarus
				button.btn-plus(ng-click="addNewPhone()")
					i.fa.fa-plus-square


		.section-form
			p.form-section-glarus
				| {{ 'staff.mailsTitle' | translate}}
			fieldset.fieldset-flex(data-ng-repeat="email in staff.contactMethods.emails track by $index")
				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.type' | translate}}
							input(ng-model="email.type")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.email' | translate}}
							input(ng-model="email.address")

					div
						md-checkbox(aria-label="Principal" ng-model='email.principal')
							| {{ 'staff.first' | translate}}

					div
						button.btn-trash(ng-click="removeMail($index)")
							i.fa.fa-trash

			.btn-row-form
				md-divider.divider-line-glarus
				button.btn-plus(ng-click="addNewMail()")
					i.fa.fa-plus-square


	.staff-form-right
		.section-form
			p.form-section-glarus
				| {{ 'staff.jobTitle' | translate}}
			div.an-material
				md-input-container.full
					label {{ 'staff.job' | translate}}
					input(ng-model='staff.job.title')

				md-input-container.full
					label {{ 'staff.area' | translate}}
					input(ng-model='staff.job.area')

		.section-form
			p.form-section-glarus
				| {{ 'staff.addressesTitle' | translate}}
			md-divider.divider-line-glarus(ng-show="lastAddress==0") 

			fieldset(data-ng-repeat="address in staff.contactMethods.addresses track by $index")
				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.type' | translate}}
							input(ng-model="address.type" id="address1")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.country' | translate}}
							input(ng-model="address.country")
					div
							md-checkbox(aria-label="Fiscal" ng-model="address.fiscal")
								| {{ 'staff.fiscal' | translate}}
					div
						button.btn-trash(ng-click="removeAddress($index)")
							i.fa.fa-trash

				.container-flex-form
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.street1' | translate}}
							input(ng-model='address.line1')
				.container-flex-form
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.street2' | translate}}
							input(ng-model='address.line2')

				.fieldset-flex
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.city' | translate}}
							input(ng-model="address.cityText")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.state' | translate}}
							input(ng-model="address.stateText")
					.an-material.nopadding
						md-input-container.full
							label {{ 'staff.zip' | translate}}
							input(ng-model='address.postalCode')

			.btn-row-form
				md-divider.divider-line-glarus
				button.btn-plus(ng-click="addNewAddress()")
					i.fa.fa-plus-square


		



