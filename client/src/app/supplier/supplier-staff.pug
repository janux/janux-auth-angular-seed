.container-flex-form(style="padding:25px;")
	table.list-glarus.contacts-list(ng-show='staffRecords.length')
		thead
			tr
				th {{ 'party.person.name' | translate }}
				th {{ 'party.phone' | translate }}
				th {{ 'party.email' | translate }}
				th {{ 'party.person.area' | translate }}
				th {{ 'supplier.available' | translate }}
				th(ng-show='userRole.can("READ",subOption.authContext);')
					.col-edit-contact {{ 'user.edit' | translate }}
		tbody
			tr(ng-repeat='staff in staffRecords track by staff.id')
				td {{ staff.name.middle }} {{ staff.name.last }}, {{ staff.name.first }}
				td {{ staff.phoneNumber('work').number }}
				td {{ staff.emailAddress('work').address }}
				td {{ staff.area }}
				td.checkbox-center
					md-checkbox(aria-label="Trash" ng-model='staff.isAvailable' class="md-primary" ng-disabled="true" )
					a.action-button-glarus
						span.fa.fa-exchange.fa-lg(ng-click='switchAvailability(!staff.isAvailable,staff.id)' style="margin-left:8px;")
					//input(type='checkbox' ng-model='staff.isAvailable' ng-change='switchAvailability( staff.isAvailable,staff.id)')
				td.action(ng-show='userRole.can("READ",subOption.authContext);')
					a.action-button-glarus
						span.fa.fa-pencil.fa-lg(ng-click='editClientStaff(staff.id)' style="margin-left:8px;")

