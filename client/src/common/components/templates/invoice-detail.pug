//Header data.

fieldset.fieldset-flex
	.fieldset-flex
		.an-material.nopadding
			md-input-container
				label {{ 'services.invoice.invoiceNumber' | translate}}
				input(ng-model='invoice.invoiceNumber' ng-disabled='true')
		.an-material.nopadding
			md-input-container
				label {{'services.invoice.status' | translate}}
				md-select(ng-model='invoice.status' ng-disabled='!editModeInvoiceDetail')
					md-option(value='inRevision') {{ 'services.invoice.statuses.inRevision' | translate}}
					md-option(value= 'ended') {{ 'services.invoice.statuses.ended' | translate}}
		.an-material.nopadding
			md-input-container
				md-checkbox(ng-model='invoice.isPaid' ng-disabled='!editModeInvoiceDetail || invoice.status!=="ended"')
					| {{'services.invoice.isPaid' | translate}}
md-divider.divider-line-glarus
// Detail person
div
	strong {{'services.invoice.invoiceDetail.staff' | translate}}
div(style='height:45%')
	invoice-detail-person(invoice='invoice')

div(style="text-align: right")
	strong {{'services.invoice.invoiceDetail.subTotalPerson' | translate}}:{{ (subTotalPerson | currency) }}
md-divider.divider-line-glarus

// Detail vehicle.
div
	strong {{'services.invoice.invoiceDetail.vehicles' | translate}}
div(style='height:45%')
	invoice-detail-vehicle(invoice='invoice')
div(style="text-align: right")
	strong {{'services.invoice.invoiceDetail.subTotalVehicle' | translate}}:{{ (subTotalVehicle | currency) }}
md-divider.divider-line-glarus

// Detail expenses
div
	strong {{'services.invoice.invoiceDetail.expenses' | translate}}
div(style='height:30%')
	invoice-detail-expense(invoice='invoice')
div(style="text-align: right; margin-top:20px")
	strong {{'services.invoice.invoiceDetail.subTotalExpenses' | translate}}:{{ (subTotalExpense | currency) }}
md-divider.divider-line-glarus

// Discounts and totals

div(style="text-align: right;height:20%" )
	strong {{'services.invoice.invoiceDetail.totalBeforeDiscount' | translate}}:{{(invoice.totalAfterExpenses | currency)}}
	br
	strong {{'services.invoice.invoiceDetail.discount' | translate}}:{{(invoice.discount | currency)}}
	br
	strong {{'services.invoice.invoiceDetail.grandTotal' | translate}}:{{(invoice.grandTotal | currency)}}
