.sd-page-header(ng-controller='asideMenu')
    .sd-page-logo(ng-class="{'toggleMenu': isCollapsed}")
      a(href='../')
        img.sd-logo-default(src='/img/janux_logo.png', alt='Janux')
    .sd-page-breadcrum
      | {{ title | translate }}
    .sd-top-menu
      ul
        li
          a.sd-name(href='#') {{ currentUser.contact.name.first +' '+currentUser.contact.name.last}}
        li
          a(ng-show='isAuthenticated()', ng-click='logout()')
            i.fa.fa-sign-out.fa-lg

    .navbar-toggle-btn
       a(ng-click='openMenu()')
         span.fa.fa-bars.fa-lg.glyphicon-align-justify

